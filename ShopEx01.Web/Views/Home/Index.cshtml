@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layouts.cshtml";
}

@model ShopEx01.Web.Models.HomeViewModel

@section homeProducts{
    <section id="slider">
        <!--slider-->
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            @for (int i = 0; i < Model.Slides.Count(); i++)
                            {
                                if (i == 0)
                                {
                                    <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                                }
                                else
                                {
                                    <li data-target="#slider-carousel" data-slide-to="@i"></li>
                                }
                            }
                        </ol>

                        <div class="carousel-inner">
                            @foreach (var slide in Model.Slides)
                            {
                                var urlSlide = "/" + slide.Alias + ".pc-" + slide.ID + ".html";
                                if (slide.DisplayOrder == 1)
                                {
                                    <div class="item active">
                                        <div class="col-sm-6">
                                            <h1><span>E</span>-SHOPPER</h1>
                                            <h2>@slide.Name</h2>
                                            <p>@slide.Description</p>
                                            <a href="@urlSlide" class="btn btn-default get" role="button">Mua ngay</a>
                                        </div>
                                        <div class="col-sm-6">
                                            <img src="@slide.Image" class="girl img-responsive" alt="" />
                                            <img src="~/Assets/client/images/home/pricing.png" class="pricing" alt="" />
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="item">
                                        <div class="col-sm-6">
                                            <h1><span>E</span>-SHOPPER</h1>
                                            <h2>@slide.Name</h2>
                                            <p>@slide.Description</p>
                                            <a href="@urlSlide" class="btn btn-default get" role="button">Mua ngay</a>
                                        </div>
                                        <div class="col-sm-6">
                                            <img src="@slide.Image" class="girl img-responsive" alt="" />
                                            <img src="~/Assets/client/images/home/pricing.png" class="pricing" alt="" />
                                        </div>
                                    </div>
                                }
                            }

                        </div>

                        <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                            <i class="fa fa-angle-left"></i>
                        </a>
                        <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section><!--/slider-->
}

    <div class="features_items">
        <!--Hot Items-->
        <h2></h2>
        <h2 class="title text-center">Sản phẩm hot</h2>
        @foreach (var product in Model.TopSaleProducts)
        {
            var url = "/" + product.Alias + ".p-" + product.ID + ".html";
            <div class="col-sm-3">
                <div class="product-image-wrapper">
                    <div class="single-products">
                        <div class="productinfo text-center">
                            <img src="@product.Image" alt="" />
                            <h2>@product.Price</h2>
                            <p>@product.Name</p>
                        </div>
                        <div class="product-overlay">
                            <div class="overlay-content">
                                <h2>@product.Price</h2>
                                <p>@product.Name</p>
                                @*<a href="@url" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>*@
                                <a class="btn btn-default add-to-cart btnAddToCart" href="#" data-id="@product.ID"><i class="fa fa-shopping-cart"></i>Mua hàng</a>
                            </div>
                        </div>
                    </div>
                    <div class="choose">
                        <ul class="nav nav-pills nav-justified">
                            <li><a href="@url"><i class="fa fa-plus-square"></i>Thông tin chi tiết sản phẩm</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div><!--Hot Items-->

    <div class="features_items">
        <!--New Items-->
        <h2></h2>
        <h2 class="title text-center">Sản phẩm mới</h2>
        @foreach (var product in Model.LastestProducts)
        {
            var url = "/" + product.Alias + ".p-" + product.ID + ".html";
            <div class="col-sm-3">
                <div class="product-image-wrapper">
                    <div class="single-products">
                        <div class="productinfo text-center">
                            <img src="@product.Image" alt="" />
                            <h2>@product.Price</h2>
                            <p>@product.Name</p>
                            @*<a href="@url" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>*@
                            <a class="btn btn-default add-to-cart btnAddToCart" href="#" data-id="@product.ID"><i class="fa fa-shopping-cart"></i>Mua hàng</a>
                        </div>
                    </div>
                    <div class="choose">
                        <ul class="nav nav-pills nav-justified">
                            <li><a href="@url"><i class="fa fa-plus-square"></i>Thông tin chi tiết sản phẩm</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div><!--New Items-->

   