@using Microsoft.AspNet.Identity
<header id="header">
    <!--header-->
    <div class="header_top">
        <!--header_top-->
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="contactinfo">
                        <ul class="nav nav-pills">
                            <li><a href="#"><i class="fa fa-phone"></i> 0985 617 988</a></li>
                            <li><a href="#"><i class="fa fa-envelope"></i> shop@gmail.com</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="social-icons pull-right">
                        <ul class="nav navbar-nav">
                            <li><a href="https://www.facebook.com/tranminhhien95"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div><!--/header_top-->

    <div class="header-middle">
        <!--header-middle-->
        <div class="container">
            <div class="row">
                <div class="col-md-4 clearfix">
                    <div class="logo pull-left">
                        <a href="index.html"><img src="~/Assets/client/images/home/logo.png" alt="" /></a>
                    </div>
                </div>
                <div class="col-md-8 clearfix">
                    <div class="shop-menu clearfix pull-right">
                        <ul class="nav navbar-nav">
                            @using (Html.BeginForm("LogOut", "Account", FormMethod.Post, new { @id = "frmLogout" }))
                            {
                                if (Request.IsAuthenticated)
                                {
                                    @Html.AntiForgeryToken()
                                    <li><a href="/tai-khoan.html"><i class="fa fa-user"></i> Xin chào: @User.Identity.GetUserName() </a></li>
                                    <li><button type="submit">Thoát</button></li>
                                    <li><a href="/gio-hang.html"><i class="fa fa-shopping-cart"></i> Giỏ Hàng</a></li>
                                }
                                else
                                {
                                    <li><a href="/dang-nhap.html"><i class="fa fa-lock"></i> Đăng Nhập</a></li>
                                    <li><a href="/dang-ky.html"><i class="fa fa-unlock-alt"></i> Đăng Ký</a></li>
                                }

                            }

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div><!--/header-middle-->

    <div class="header-bottom">
        <!--header-bottom-->
        <div class="container">
            <div class="row">
                <div class="col-sm-9">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="mainmenu pull-left">
                        <ul class="nav navbar-nav collapse navbar-collapse">
                            <li><a href="index.html" class="active">Trang chủ</a></li>
                            <li class="dropdown">
                                <a href="#">Danh mục<i class="fa fa-angle-down"></i></a>
                                <ul role="menu" class="sub-menu">
                                    <li><a href="shop.html">Danh mục sản phẩm</a></li>
                                    <li><a href="product-details.html">Sản phẩm</a></li>
                                    <li><a href="checkout.html">Thương hiệu</a></li>
                                    <li><a href="lien-he.html">Liên hệ</a></li>
                                    <li><a href="login.html">Login</a></li>
                                </ul>
                            </li>
                            <li><a href="lien-he.html">Liên hệ</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-3">
                    <form class="navbar-form pull-right" method="get" action="/tim-kiem.html">
                        <div class="input-group">
                            <input type="text" id="txtKeyword" name="keyword" class="form-control" placeholder="Từ khóa tìm kiếm" />
                            <span class="input-group-btn">
                                <button type="submit" id="btnSearch" class="btn btn-default">Tìm Kiếm</button>
                            </span>
                        </div>
                    </form>
                    @*<div class="search">
                            <div class="search_box pull-right">
                                <input type="text" id="txtKeyword" placeholder="Từ khóa tìm kiếm">
                                <input type="submit" value="Tìm Kiếm" id="btnSearch">
                            </div>
                        </div>*@
                </div>
            </div>
        </div>
    </div><!--/header-bottom-->
</header><!--/header-->
