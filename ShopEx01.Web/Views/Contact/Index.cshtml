@model ShopEx01.Web.Models.ContactDetailViewModel

@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/Layouts.cshtml";
}
@section footerJS{
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyATkx-fEPKCeMkEPeHIr4jZXWmeFeNJZi0"></script>
    <script src="~/Assets/client/js/controllers/contact.js"></script>
}
<style>
    #map {
        height: 500px;
    }
</style>
<input type="hidden" id="hidAddress" value="@Model.Name<br />Điện thoại:@Model.Phone <br>Địa chỉ: @Model.Address" />
<input type="hidden" id="hidLat" value="@Model.Lat" />
<input type="hidden" id="hidLng" value="@Model.Lng" />
<input type="hidden" id="hidName" value="@Model.Name" />

<div id="contact-page" class="container">
    <div class="bg">
        <div class="row">
            <div class="col-sm-9">
                <h2></h2>
                <h2 class="title text-center">Liên hệ <strong>Shop</strong></h2>
                <div id="map" class="contact">
                </div>
            </div>
            <div class="col-sm-9">
                <div class="contact-info">
                    <h2></h2>
                    <h2 class="title text-center">Thông tin liên hệ</h2>
                    <address class="title text-center">
                        <p>E-Shopper Inc.</p>
                        <p> @Model.Address </p>
                        <p>Tp.Ho Chi Minh</p>
                        <p>SĐT: @Model.Phone</p>
                        <p>Email: &nbsp; <a href="mailto:@(Model.Email)"> @Model.Email</a> </p>
                    </address>
                    <div class="social-networks">
                        <h2></h2>
                        <h2 class="title text-center">Mạng xã hội</h2>
                        <ul>
                            <li>
                                <a href="#"><i class="fa fa-facebook"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-google-plus"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-youtube"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-9">
                <div class="contact-form">
                    <h2></h2>
                    <h2 class="title text-center">Get In Touch</h2>
                    <div class="status alert alert-success" style="display: none"></div>
                    <form id="main-contact-form" class="contact-form row" name="contact-form" method="post">
                        <div class="form-group col-md-6">
                            <input type="text" name="name" class="form-control" required="required" placeholder="Tên của bạn">
                        </div>
                        <div class="form-group col-md-6">
                            <input type="text" name="email" class="form-control" required="required" placeholder="Email của bạn">
                        </div>
                        <div class="form-group col-md-12">
                            <input type="text" name="subject" class="form-control" required="required" placeholder="Vấn đề phản hồi của bạn">
                        </div>
                        <div class="form-group col-md-12">
                            <textarea name="message" id="message" required="required" class="form-control" rows="8" placeholder="Phản hồi của bạn"></textarea>
                        </div>
                        <div class="form-group col-md-12">
                            <input type="submit" name="submit" class="btn btn-primary pull-right" value="Gửi">
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div><!--/#contact-page-->